    ViewData["Title"] = "Cliente ";
}
<h1>@ViewData["Title"]</h1>
<div class="container">
    <h1 class="text-center mb-4">Cliente</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Contacto" asp-action="Create" method="post">
